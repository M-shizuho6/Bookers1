<h1>Editing Book</h1>
<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_部分　-->
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id)%>
<%= link_to "Back", books_path%>