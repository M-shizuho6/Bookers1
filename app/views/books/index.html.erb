<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>
<h2>Books</h2>
<table>
<tr>
<th>Title</th><th>Body</th><th></th><th></th><th></th>
</tr>
<% @books.each do |book|%>
<tr>
    <td><%= book.title%></td>
    <td><%= book.body%></td>
    <td><%= link_to "Show", book_path(book.id)%></td>
    <td><%= link_to "Edit", edit_book_path(book.id)%></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
</tr>
<% end %>
</table>


<h2>Newbook</h2>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @book do |b|%>

<h3>title</h3>
<%= b.text_field :title %>
<h3>body</h3>
<%= b.text_area :body %>
<%= b.submit "Create Book" %>

<% end %>
